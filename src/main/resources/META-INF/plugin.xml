<idea-plugin>
    <id>lekanich.HeadsOrTails</id>
    <name>Heads or Tails</name>
    <vendor email="lekan1992@gmail.com">Aleksandr Zhelezniak</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.HeadsOrTailsBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group id="heads.or.tails">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action id="lekanich.HeadsOrTailsAction" description="Throw a coin" text="Heads or Tails"
                    class="lekanich.HeadsOrTailsAction" icon="HeadsOrTailsIcons.COIN"/>
        </group>
    </actions>
</idea-plugin>